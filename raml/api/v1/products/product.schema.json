{
    "id": "http://kpmg/webstart/Product",
    "type": "object",
    "$schema": "http://json-schema.org/draft-04/schema",
    "required": ["productId", "name", "category", "unitPrice", "dateAdded", "popular", "description", "images"],
    "additionalProperties": false,
    "properties": {
        "productId": {
            "description": "The identifier of the object",
            "type": "integer"
        },
        "name": {
            "description": "Product name",
            "type": "string"
        },
        "category": {
            "description": "Product category",
            "type": "string",
            "enum": [
                "LAPTOP",
                "TABLET",
                "SMARTPHONE",
                "SOFTWARE"
            ]
        },
        "unitPrice": {
            "description": "Product unit price",
            "type": "number"
        },
        "dateAdded": {
            "description": "Date that the product was/is first made available",
            "type": "string",
            "format": "date-time"
        },
        "popular": {
            "description": "Indicates this product should be featured",
            "type": "boolean"
        },
        "description": {
            "description": "Product description",
            "type": "string",
            "maxLength": 4000
        },
        "defaultImageId": {
            "description": "ImageId of the default image for this product"
        },
        "images": {
            "description": "Array of ImageIds of all product images (including the default image)",
            "type": "array",
            "items": { "type": "integer" }
        }
    }
}
